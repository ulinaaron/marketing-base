<div x-data="{ mobile: false }"  class="">
    <button id="mobile-nav-toggle" @click="mobile = ! mobile" :class="{ 'menu-toggle-active': mobile === true }" class="fixed top-0 z-50 flex items-center justify-center block w-full h-16 font-bold border-none text-pref-buttonPrimarySupport bg-pref-buttonPrimaryBase mobile-nav-toggle hover:bg-pref-buttonPrimaryBaseHover focus:outline-none md:hidden" aria-label="Mobile menu toggle" x-bind:aria-expanded="mobile" aria-expanded="false" aria-controls="mobile-nav">

    <span class="mr-2 mobile-nav-icon" aria-hidden="true">
        <span class="block w-6 mb-1 transition-all duration-200 ease-out bg-pref-buttonPrimarySupport mobile-nav-icon-line"></span>
        <span class="block w-6 mb-1 transition-all duration-200 ease-out bg-pref-buttonPrimarySupport mobile-nav-icon-line"></span>
        <span class="block w-6 transition-all duration-200 ease-out bg-pref-buttonPrimarySupport mobile-nav-icon-line"></span>
    </span>

    <span class="font-bold mobile-nav-label">Menu</span>

    </button>


    <nav id="mobile-nav" :class="{ 'menu-visible': mobile === true }" class="fixed top-0 left-0 z-40 w-full h-screen pt-20 overflow-y-auto mobile-nav text-pref-buttonPrimarySupport bg-pref-buttonPrimaryBase md:hidden">

        <ul class="text-center">

            {% for item in navigation.main %}

            <li class="relative opacity-0 item">

                <a href="{{ item.url | safe }}" class="link block py-2 px-5 text-pref-menu text-3xl hover:text-pref-menuHover {% if page.url == item.url %}active text-pink-500{% endif %}
                "{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}</a>

            </li>

            {% endfor %}

        </ul>

    </nav>
