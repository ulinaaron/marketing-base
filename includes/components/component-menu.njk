{% set justify = macro.styles(component.justify, editor.row_justify) if component.justify else ""%}

<div class="ui-component ui-component--menu {{ advanced }} {{ appearance }}">
    <nav id="nav" class="flex {{ justify }}">
        <ul class="menu">

            {% for item in navigation.main %}

            <li class="menu__item">

                <a href="{{ item.url | safe }}" class="menu__item__link {% if page.url == item.url %}active text-pref-linkHover{% endif %}
                "{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}</a>

            </li>

            {% endfor %}

        </ul>
    </nav>
</div>