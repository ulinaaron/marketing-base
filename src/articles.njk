---
layout: default
meta_title: Articles
meta_description: Assortment of my writings.
body_class: articles
hidden: true
title: Articles
---

<main id="main" class="flex flex-col flex-1 py-10 main inner lg:py-20 focus:outline-none" tabindex="-1">

    <section id="container-centre" class="flex-1 column centre" aria-label="Blogs">

        <h1 class="mb-16 text-3xl page-title md:text-center md:text-5xl lg:mb-24 lg:text-6xl">{{ title }}</h1>

        <div class="flex-wrap flex-1 posts lg:flex">

            {% for post in collections.blog %}

                <article class="w-full mb-8 overflow-hidden article-card">

                    {# featured post image & category #}
                    {% if post.data.featured_image %}

                        <a class="relative block overflow-hidden featured-image-link" href="{{ post.url }}">

                            {# category link #}
                            {% if post.data.tags %}
                            <ul class="absolute bottom-0 left-0 z-10 flex p-8">

                                {% for item in post.data.tags %}

                                    {%- if item != "blog" -%}

                                        <li class="mr-2">

                                            <span class="inline-block px-4 py-2 text-sm font-bold rounded text-pref-cardBase bg-pref-cardMeta">{{ item | capitalize }}</span>

                                        </li>

                                    {%- endif -%}

                                {% endfor %}

                            </ul>
                            {% endif %}

                            <figure>

                                {# the 'data-lazy' attribute will lazy load your images in #}
                                {# the js uses the new Intersection Observer API, see ../modules/lazyload #}
                                {# it's not fully supported in some browsers, so proceed with caution! #}
                                {# the srcset attribute would be a nice addtion here as well...in a future update maybe :) #}
                                <img data-lazy="{{ post.data.featured_image }}" class="block rounded-lg shadow-xl bg-pref-cardBase" alt="{{ post.data.image_caption }}">

                            </figure>

                        </a>

                    {% endif %}

                    <div class="p-8 border-b border-pref-meta">

                        <h2 class="mb-6 text-3xl font-bold"><a class="block text-pref-cardHeading hover:text-pref-cardSupport" href="{{ post.url }}">{{ post.data.title }}</a></h2>

                        
                        <div class="flex flex-row">
                            <div class="w-2/3">
                                <div class="flex text-sm text-pref-cardMeta">

                                    <p class="author">By {{ site.author.name }}</p>

                                    <p class="hidden px-2 sm:block">â€”</p>

                                    <time datetime="{{ post.date }}">
                                        {{ post.date | dateDisplay }}
                                    </time>

                                </div>

                            </div>
                            <div class="w-1/3 text-right">
                                <a class="inline-block text-sm text-right border-b-2 text-pref-cardHeading hover:text-pref-cardSupport border-pref-cardSupport" href="{{ post.url }}">Read More</a>
                            </div>
                        </div>

                    </div>

                </article>

            {% endfor %}

        </div>

    </section>

</main>


