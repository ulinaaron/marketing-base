{% import "macros.njk" as macro %}

{% macro base(token='', group='') %}
    {# Defaults #}
    {% set defaults = "inline-block font-bold rounded" %}

    {% set advanced = macro.advanced(token.advanced) %}
    {% set appearance = macro.appearance(token.appearance, group) %}
    {% if token.type == "fill" %}
        {% set styles =  macro.styles(token.style, group.button_styles) %}
    {% elif token.type == "outline" %}
        {% set styles =  macro.styles(token.style, group.button_outline_styles) %}
    {% endif %}
    {% set sizes =  macro.styles(token.size, group.button_sizes) %}
    {% set text_alignment =  macro.styles(token.text_alignment, group.text_alignment ) %}

    <div class="ui-component ui-component--button {{ advanced }} {{ appearance }} {{ text_alignment }}">
        <a href="{{ token.url }}" class="button {{ defaults }} {{ styles }} {{ sizes }}">{{ token.text }}</a>
    </div>
{% endmacro %}

{{ base(component, editor) }}
